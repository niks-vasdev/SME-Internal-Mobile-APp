@page "/forgot-password"
@using SmedaInternalMobile.Authentication
@inject IAuthService AuthService
@inject NavigationManager Navigation

@code {
    private string email;
    private string successMessage;
    private string errorMessage;
    private bool isBusy;

    private async Task HandleForgotPassword()
    {
        isBusy = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var result = await AuthService.ForgotPassword(new ForgotPasswordViewModel { Email = email });

        isBusy = false;

        if (result.Successful)
        {
            successMessage = "Reset link sent to your email.";
        }
        else
        {
            errorMessage = result.Error ?? "Failed to send reset link. Please try again.";
        }
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}

<style>
    /* Existing styles */
    body {
        background-color: #f0f4f8;
        font-family: Arial, sans-serif;
    }

    .grid-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
    }

    .header-label {
        margin-top: 20px;
        color: #00416d;
    }

    .header-text {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
    }

    .email-field {
        margin-top: 30px;
        width: 100%;
        max-width: 400px;
    }

    .input-border {
        display: flex;
        align-items: center;
        border: 2px solid #00416d;
        border-radius: 30px;
        padding: 10px;
        background-color: white;
    }

        .input-border i {
            color: #00416d;
            margin-right: 10px;
        }

        .input-border input {
            border: none;
            outline: none;
            flex: 1;
            padding: 10px;
        }

            .input-border input::placeholder {
                color: #aaa;
            }

    .message {
        margin-top: 10px;
        font-size: 1rem;
        text-align: center;
    }

    .success-message {
        color: green;
    }

    .error-message {
        color: red;
    }

    button {
        margin-top: 20px;
        background-color: #00416d;
        padding: 10px;
        border-radius: 15px;
        border: none;
        color: white;
        font-weight: bold;
        width: 100%;
        max-width: 400px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #005f8d;
        }

    .back-button {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #00416d;
        padding: 8px;
        border-radius: 15px;
        border: none;
        color: white;
        font-weight: bold;
        width: 100%;
        max-width: 400px;
        cursor: pointer;
        margin-top: 15px;
        transition: background-color 0.3s;
    }

        .back-button i {
            margin-right: 8px;
            font-size: 1.2rem;
        }

        .back-button:hover {
            background-color: #005f8d;
        }
</style>

<div class="grid-container">
    <div class="header-label">
        <label class="header-text">Forgot Password</label>
    </div>

    <div class="email-field">
        <div class="input-border">
            <i class="fa fa-envelope"></i>
            <input type="email" @bind="email" placeholder="Enter your email" />
        </div>
    </div>

    <button class="back-button" @onclick="NavigateToLogin">
        <i class="fa fa-arrow-left"></i> Back to Login
    </button>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="message error-message">@errorMessage</div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="message success-message">@successMessage</div>
    }

    @if (isBusy)
    {
        <div style="margin-top: 10px">
            <LoadingComponents />
        </div>
    }
    else
    {
        <button @onclick="HandleForgotPassword">Send Reset Link</button>
    }
</div>
